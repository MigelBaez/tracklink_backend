package pe.com.tracklink.starter.controllers;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

import pe.com.tracklink.starter.models.Cliente;
import pe.com.tracklink.starter.repositories.ClienteRepository;

import java.util.List;

import static java.util.Arrays.asList;

@RestController
@RequestMapping("/api")
public class PersonController {

    private final static Logger LOGGER = LoggerFactory.getLogger(ClienteController.class);
    private final ClienteRepository clienteRepository;

    public PersonController(ClienteRepository clienteRepository) {
        this.clienteRepository = clienteRepository;
    }

    @PostMapping("person")
    @ResponseStatus(HttpStatus.CREATED)
    public Cliente postPerson(@RequestBody Cliente person) {
        return clienteRepository.save(person);
    }

    @PostMapping("persons")
    @ResponseStatus(HttpStatus.CREATED)
    public List<Cliente> postPersons(@RequestBody List<Cliente> persons) {
        return clienteRepository.saveAll(persons);
    }

    @GetMapping("persons")
    public List<Cliente> getPersons() {
        return clienteRepository.findAll();
    }

    @GetMapping("person/{id}")
    public ResponseEntity<Cliente> getPerson(@PathVariable String id) {
        Cliente person = clienteRepository.findOne(id);
        if (person == null)
            return ResponseEntity.status(HttpStatus.NOT_FOUND).build();
        return ResponseEntity.ok(person);
    }

    @GetMapping("persons/{ids}")
    public List<Cliente> getPersons(@PathVariable String ids) {
        List<String> listIds = asList(ids.split(","));
        return clienteRepository.findAll(listIds);
    }

    @GetMapping("persons/count")
    public Long getCount() {
        return clienteRepository.count();
    }

    @DeleteMapping("person/{id}")
    public Long deletePerson(@PathVariable String id) {
        return clienteRepository.delete(id);
    }

    @DeleteMapping("persons/{ids}")
    public Long deletePersons(@PathVariable String ids) {
        List<String> listIds = asList(ids.split(","));
        return clienteRepository.delete(listIds);
    }

    @DeleteMapping("persons")
    public Long deletePersons() {
        return clienteRepository.deleteAll();
    }

    @PutMapping("person")
    public Cliente putPerson(@RequestBody Cliente person) {
        return clienteRepository.update(person);
    }

    @PutMapping("persons")
    public Long putPerson(@RequestBody List<Cliente> persons) {
        return clienteRepository.update(persons);
    }

    @GetMapping("persons/averageAge")
    public Double averageAge() {
        return clienteRepository.getAverageAge();
    }

    @ExceptionHandler(RuntimeException.class)
    @ResponseStatus(HttpStatus.INTERNAL_SERVER_ERROR)
    public final Exception handleAllExceptions(RuntimeException e) {
        LOGGER.error("Internal server error.", e);
        return e;
    }
}